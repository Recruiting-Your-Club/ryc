{
    "extends": "@ssoc/config/src/tsconfig/tsconfig.react.json",
    "moduleResolution": "bundler", // webpack 번들링 위해 필요
    "noEmit": true, // tsconfig말고 webpack으로 번들링 함
    "resolveJsonModule": false, // json import
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@api/*": ["api/*"],
            "@assets/*": ["assets/*"],
            "@components": ["components"],
            "@components/*": ["components/*"],
            "@constants/*": ["constants/*"],
            "@hooks/*": ["hooks/*"],
            "@layouts/*": ["layouts/*"],
            "@pages/*": ["pages/*"],
            "@types/*": ["types/*"],
            "@utils/*": ["utils/*"],
            "@styles/*": ["styles/*"],
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "build"]
}
