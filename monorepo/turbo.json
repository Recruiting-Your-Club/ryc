{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "start": {
            "dependsOn": ["^build"]
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"],
            "env": ["BASE_URL"]
        },
        "dev": {
            "dependsOn": ["^build"],
            "persistent": true,
            "cache": false
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "format": {
            "outputs": [],
            "cache": false
        },
        "format:check": {
            "outputs": []
        },
        "test": {
            "dependsOn": ["^test"]
        }
    }
}
